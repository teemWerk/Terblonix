<Window 
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
       Title="Terblonix" Width="800" Height="600" WindowStyle="None" ResizeMode="NoResize"
       AllowsTransparency="True" Background="Transparent"
       x:Name="window">
    <Border Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                              Direction="270"
                              BlurRadius="20"
                              ShadowDepth="3" />
        </Border.Effect>
        <Grid Margin="10,10,10,10">
            <Grid.Background>
                <SolidColorBrush Color="Gray">
                </SolidColorBrush>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="45" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.ColumnSpan="4" Grid.RowSpan="3">
                <DockPanel DockPanel.Dock="Top"
                           Height="32"
                           Background="#400040"
                           x:Name="dockbar">
                    <TextBlock Padding="8"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Text="Terblonix"
                               Foreground="Black"
                               FontWeight="Bold"
                               FontSize="18" />                   
                    </DockPanel>
                <ContentControl Name="content" />
            </DockPanel>
            <Label Grid.Row="0" Grid.Column="0" Content="Oblobna:" Margin="0,39,0,8" Foreground="Black"/>
            <Label Grid.Row="1" Grid.Column="0" Content="Buffer:" Margin="0,0,0,0" Foreground="Black"/>
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Width="437" x:Name="portStack">
                <Label Content="Port:" Margin="0,36,5,8" Foreground="Black"/>
                <ComboBox FontSize="16" Width="172" Margin="5,36,5,0" Height="26" x:Name="combo1"></ComboBox>
                <Button FontSize="16" Margin="5,36,5,0" Height="26" Width="100" x:Name="connect">Connect</Button>
                <Button FontSize="16" Margin="5,36,5,0" Height="26" Width="100" x:Name="rescan">Scan Ports</Button>
            </StackPanel>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="2,10,0,0" Width="500" 
                     TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                     HorizontalAlignment="Left" x:Name="outputBox"/>
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Width="503">
                <TextBox Width="300" Margin="2,0,3,0" Height="26" x:Name="inputBox"/>
                <Button Content="Send" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="11,0,0,0" Width="88" Background="#FFE4E4E4" BorderThickness="0" x:Name="send" Height="26" RenderTransformOrigin="0.5,-0.719"/>
                <Button Content="Clear" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="11,0,0,0" Width="88" Background="#FFE4E4E4" BorderThickness="0" x:Name="clear" Height="26"/>
            </StackPanel>
        </Grid>
    </Border>
</Window> 
